@model IdentityChat.Models.CurrentUserViewModel

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="index3.html" class="brand-link">
        <img src="~/AdminLTE-3.1.0/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Identity Chat</span>
    </a>

    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/AdminLTE-3.1.0/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@Model.Name @Model.Surname</a>
            </div>
        </div>


        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>


        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                <li class="nav-item">
                    <a href="/CreateMessage/Index/" class="nav-link">
                        <i class="nav-icon fas fa-calendar-alt"></i>
                        <p>
                            Mesaj Gönder

                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Inbox/Index/" class="nav-link">
                        <i class="nav-icon far fa-image"></i>
                        <p>
                            Gelen Kutusu
                            <span class="badge badge-info right">@ViewBag.Inboxcount</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/SendBox/Index/" class="nav-link">
                        <i class="nav-icon fas fa-edit"></i>
                        <p>
                            Giden Kutusu
                            <span class="badge badge-success right">@ViewBag.sendboxcount</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Draft/Index/" class="nav-link">
                        <i class="nav-icon fas fa-book"></i>
                        <p>
                            Taslak
                            <span class="badge badge-warning right">@ViewBag.draftcount</span>
                        </p>
                    </a>

                </li>
                <li class="nav-item">
                    <a href="/Trash/Index/" class="nav-link">
                        <i class="far fa-trash-alt"></i>
                        <p>
                            Çöp Kutusu
                            <span class="badge badge-danger right">@ViewBag.trashcount</span>
                        </p>
                    </a>

                </li>

            </ul>
        </nav>
    </div>
</aside>