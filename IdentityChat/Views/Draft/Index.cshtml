@model List<IdentityChat.Models.DraftListViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
    int sirano = 0;
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Taslaklar</h3>
                <br />
                <br />
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kime</th>
                            <th>Konu(Detay)</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        sirano++;
                                    } @sirano
                                </td>
                                <td>@x.ReceiverName @x.ReceiverSurname</td>
                                <td><a href="/Draft/DraftDetail/@x.DraftID">@x.Subject</a></td>
                                <td>@x.DateTime.ToShortDateString()</td>
                                
                                
                                <td>
                                    <a class="btn btn-outline-danger btn-sm" href="/Draft/DeleteDraft/@x.DraftID">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>






