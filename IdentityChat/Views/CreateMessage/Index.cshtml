@model IdentityChat.Models.CreateMessageViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}



<div class="col-md-12">

    <div class="card card-primary card-outline">

        <div class="card-header">

            <h3 class="card-title">Mesaj Oluştur</h3>

        </div>

        <!-- /.card-header -->
        <form class="form-group" method="post">

            <div class="card-body">

                <div class="form-group">
                    <input class="form-control" name="ToUser" placeholder="Kime:">
                </div>
                <div class="form-group">

                    <input class="form-control" name="Subject" placeholder="Başlık:">

                </div>

                <div class="form-group">

                    <textarea id="compose-textarea" name="Content" class="form-control" style="height: 300px">...</textarea>

                </div>
                <div class="card-footer">
                    <div class="float-right">
                        <button type="submit" formaction="/CreateMessage/SaveDraft" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslak Kaydet</button>
                        <button type="submit" class="btn btn-primary" formaction="/CreateMessage/Index"><i class="far fa-envelope"></i> Gönder</button>
                    </div>
                    <a href="/Inbox/Index" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</a>
                </div>

                
            </div>

        </form>
        <!-- /.card-body -->

        

        <!-- /.card-footer -->

    </div>

    <!-- /.card -->

</div>





